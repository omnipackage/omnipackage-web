<div class="p-3 bg-body-tertiary">
  <div class="container-fluid py-3">

    <div class="row">
      <div class="col text-end">
        <p><%= link_to 'About', pages_about_path, class: 'link-secondary' %></p>
        <p><%= link_to 'Supported distros', pages_distros_path, class: 'link-secondary' %></p>

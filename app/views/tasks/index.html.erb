<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">State</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
      <th scope="col">Project</th>
      <th scope="col">Distros</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.state %></td>
        <td><%= task.created_at %></td>
        <td><%= task.updated_at %></td>
        <td><%= link_to task.project.name, project_path(task.project.id) %></td>
        <td><%= task.distros.map(&:fullname).to_sentence %></td>
        <td><%= link_to 'more', task_path(task.id) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<div class="p-3">
  <div class="container-fluid py-3">

    <div class="row align-items-center">
      <div class="col-md-auto">
        <% if @project.logo.present? %>
          <%= image_tag(url_for(@project.logo), height: '128', width: '128', class: 'img', alt: 'logo') %>
        <% end %>
      </div>

      <div class="col-md-10">
        <h1>Install <%= @project.name %></h1>
        <blockquote class="blockquote">
          <p>
            <%= @project.description %>
            <% if @project.upstream_url %>
              <%= link_to @project.upstream_url, @project.upstream_url, target: '_blank' %>
            <% end %>
          </p>
        </blockquote>

        <small class="text-body-secondary">Provided by <%= @project.user.displayed_name %></small>
      </div>
    </div>

  </div>
</div>

<div class="container p-3">
  <div class="vstack gap-5 pt-3">
    <% @repositories.group_by { |repo| repo.distro.family }.each do |family, repos| %>
      <div class="row align-items-center">
        <div class="col-md-auto">
          <%= render partial: 'distro_icon', locals: { family: family, size: 64 } %>
        </div>

        <div class="col-md-11">
          <%= render partial: 'installs/repos', locals: { family: family, repos: repos } %>
        </div>
      </div>
    <% end %>
  </div>
</div>

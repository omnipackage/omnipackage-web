<h5>Your private CI agents</h5>

<%= turbo_stream_from [current_user, :agents] %>
<%= turbo_stream_from :agents %>

<div class="container pt-3">
  <div class="row">
    <div class="col-md-8">
      <ul class="list-group list-group-flush" id="agents">
        <% @agents_private.each do |agent| %>
          <%= render partial: 'agents/agent', locals: { agent: agent } %>
        <% end %>
      </ul>

      <div class="pt-3">
        <%= render partial: 'layouts/pagination', locals: { pagination: @pagination } %>
      </div>

      <div class="pt-3">
        <%= link_to 'Create new agent', new_agent_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <p class="card-text">
            <span id="public_agents_busy_count"><%= @agents_public.online.busy.count %></span> of <span id="public_agents_online_count"><%= @agents_public.online.count %></span> public agents busy
          </p>
        </div>
      </div>
    </div>

  </div>
</div>

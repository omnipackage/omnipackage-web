<div class="container pt-3 text-center">
  <h5 class="text-center">Forgot your password?</h5>

  <div class="card p-3 shadow mb-3 bg-body-tertiary rounded block-center mx-auto" style="width: 500px">
    <div class="card-body">

    <%= form_with(url: identity_password_reset_path) do |form| %>
      <div class="mb-3 text-start">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, required: true, class: "form-control" %>
      </div>

      <div>
        <%= form.submit "Send password reset email", class: 'btn btn-primary' %>
      </div>
    <% end %>

    </div>
  </div>

  <div class="text-center">
    Don't have an account? <%= link_to "Sign up", sign_up_path %> <div class="vr"></div>
    <%= link_to "Forgot your password?", new_identity_password_reset_path %>
  </div>

</div>

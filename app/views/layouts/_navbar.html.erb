<nav class="navbar navbar-expand-lg bg-body-secondary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">OmniPackage</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if logged_in? %>
          <%= render partial: 'layouts/navbar_link', locals: { path: projects_path, text: 'Projects', active: -> { params[:controller] == 'projects' } } %>
          <%= render partial: 'layouts/navbar_link', locals: { path: tasks_path, text: 'CI', active: -> { params[:controller] == 'tasks' || params[:controller] == 'agents' } } %>
        <% end %>

        <%= render partial: 'layouts/navbar_link', locals: { path: distros_path, text: 'Supported distros', active: -> { params[:controller] == 'distros' } } %>
      </ul>


      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item dropdown" data-controller="theme-selector">
          <button class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-sun opacity-70" data-theme-selector-target="currentTheme" data-theme="light"></i>
            <i class="bi bi-moon opacity-70" data-theme-selector-target="currentTheme" data-theme="dark"></i>
          </button>
          <ul class="dropdown-menu shadow">
            <li>
              <button data-action="theme-selector#setCurrentTheme" class="dropdown-item" data-theme-selector-target="themeButton" data-theme="light" data-theme-selector-theme-param="light">
                <i class="bi bi-sun me-2 opacity-50 theme-icon"></i>
                Light
              </button>
            </li>
            <li>
              <button data-action="theme-selector#setCurrentTheme" class="dropdown-item" data-theme-selector-target="themeButton" data-theme="dark" data-theme-selector-theme-param="dark">
                <i class="bi bi-moon me-2 opacity-50 theme-icon"></i>
                Dark
              </button>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <button data-action="theme-selector#setCurrentTheme" class="dropdown-item" data-theme-selector-target="themeButton" data-theme="auto" data-theme-selector-theme-param="auto">
                <i class="bi bi-sun me-2 opacity-50" data-theme-selector-target="preferedTheme" data-theme="light"></i>
                <i class="bi bi-moon me-2 opacity-50" data-theme-selector-target="preferedTheme" data-theme="dark"></i>
                Auto
              </button>
            </li>
          </ul>
        </li>

        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.email %>
            </a>
            <ul class="dropdown-menu shadow">
              <li>
                <%= link_to identity_account_path, class: 'dropdown-item' do %>
                  <i class="bi bi-person-circle me-2 opacity-50"></i>
                  Account
                <% end %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to current_session, method: :delete, class: 'dropdown-item' do %>
                  <i class="bi bi-box-arrow-right me-2 opacity-50"></i>
                  Log out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign up", sign_up_path, class: 'btn btn-outline-success' %>
          </li>
      <% end %>

      </ul>

    </div>
  </div>
</nav>

<h5>Edit project <%= @project.name %></h5>

<div class="container pt-3">
  <div class="card p-3 shadow mb-3 bg-body-tertiary rounded mx-auto">
    <div class="card-body">
      <%= render partial: 'form', locals: { project: @project } %>
    </div>
  </div>

  <div class="pt-1">
    <%= link_to 'Back to project', project_path(@project.id), class: 'btn btn-link' %>
  </div>
</div>

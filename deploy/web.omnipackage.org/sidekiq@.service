[Unit]
Description=OmniPackage web Sidekiq %i
After=network.target

[Service]
Type=simple
Environment=RAILS_ENV=production
Environment=RAILS_LOG_TO_STDOUT=1
WorkingDirectory=/home/rocky/omnipackage-web
ExecStart=/home/rocky/.rbenv/bin/rbenv exec bundle exec sidekiq -C config/sidekiq/%i.yml -t 120

RestartSec=1
Restart=on-failure
TimeoutStopSec=121

[Install]
WantedBy=multi-user.target

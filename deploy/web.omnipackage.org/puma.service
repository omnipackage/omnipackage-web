[Unit]
Description=OmniPackage web Puma
After=network.target

[Service]
Type=simple
Environment=RAILS_ENV=production
WorkingDirectory=/home/rocky/omnipackage-web
ExecStart=bundle exec puma -b tcp://127.0.0.1:30000 -t 8:32

User=rocky
Group=rocky
UMask=0002
RestartSec=1
Restart=on-failure

[Install]
WantedBy=multi-user.target
